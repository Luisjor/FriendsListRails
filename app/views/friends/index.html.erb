<% if user_signed_in? %>

<h1>Friends List</h1>

<table class="table table-striped table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Twitter</th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody class="table-group-divider">
  <% @friends.each do |friend| %>
    <% if friend.user === current_user %>
    <tr>
      <td>
        <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
      </td>
      <td><%= friend.email %></td>
      <td><%= friend.phone %></td>
      <td><%= friend.twitter %></td>
      <td><%= button_to 'Delete', friend, method: :delete, class:"btn btn-danger btn-sm" %></td>
    </tr>
    <%end%>
  <%end%>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-dark" %>

<% else %>
<h1>Hello world!</h1>
<p>Thanks for visiting my first Ruby on Rails app. Here you can make your own friends listing...</p>
  <ul>
    <li>Add them</li>
    <li>Edit them</li>
    <li>Remove them</li>
  </ul>


<% end %>
